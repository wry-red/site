---
import { SITE } from "@config";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import SystemTree from "@components/albums/SystemTree.astro";

export interface Props {
  tree: TreeNode;
}

interface TreeNode {
  taxonCode: string;
  category: string;
  taxonOrder: number;
  sciName: string;
  comName: string;
  cnName: string;
  iucnStatus: string;
  illusAssetId: string;
  missingFromEbird: boolean;
  assetId: number;
  subTaxa?: TreeNode[];
}

const { tree } = Astro.props;
---

<Layout title={`Albums | ${SITE.title}`}>
  <Header activeNav="albums" />
  <SystemTree tree={tree} />
  <Footer/>
</Layout>
